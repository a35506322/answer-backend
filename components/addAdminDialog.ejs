<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content rounded-top-custom rounded-end-custom">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title fw-bold" id="exampleModalLabel">New Admin</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="border-bottom border-dark-subtle py-2">
          <h5 class="fw-bold mb-3">Account</h5>
          <div class="mb-3">
            <small for="exampleFormControlInput1" class="form-label"
              >Name</small
            >
            <input
              type="text"
              class="form-control form-control-lg rounded-top-custom rounded-end-custom border-dark"
              id="exampleFormControlInput1"
            />
          </div>
          <div class="mb-3">
            <small for="exampleFormControlInput2" class="form-label"
              >email</small
            >
            <input
              type="email"
              class="form-control form-control-lg rounded-top-custom rounded-end-custom border-dark"
              id="exampleFormControlInput2"
              placeholder="name@example.com"
            />
          </div>
        </div>
        <div class="border-bottom border-dark-subtle py-2">
          <h5 class="fw-bold my-3">Verification</h5>
          <p class="fs-6 fw-bold mb-1">
            <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i
            >Unverified
          </p>
          <div class="mb-3">
            <button
              type="button"
              class="btn btn-light text-success fw-bold w-100 rounded-top-custom rounded-end-custom py-3"
            >
              Send Verification Mail
            </button>
          </div>
        </div>
        <div class="border-bottom border-dark-subtle py-2">
          <h5 class="fw-bold my-3">Access Level</h5>
          <div class="mb-3">
            <div class="btn-group">
              <button
                class="btn btn-light btn-lg dropdown-toggle w-100 rounded-top-custom rounded-end-custom"
                type="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                -Choose access level-
              </button>
              <ul class="dropdown-menu w-100">
                <li><a class="dropdown-item" href="#">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li>
                  <a class="dropdown-item" href="#">Something else here</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="border-bottom border-dark-subtle py-2">
          <h5 class="fw-bold my-3">Custom Access</h5>
          <div class="mb-3">
            <div class="form-check mb-3">
              <input
                class="form-check-input rounded-top-custom rounded-end-custom me-3"
                type="checkbox"
                value=""
                id="flexCheckDefault"
              />
              <label class="form-check-label" for="flexCheckDefault">
                Lecture
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input rounded-top-custom rounded-end-custom me-3"
                type="checkbox"
                value=""
                id="flexCheckChecked"
                checked
              />
              <label class="form-check-label" for="flexCheckChecked">
                Coupon
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-outline-success rounded-top-custom rounded-end-custom me-3"
        >
          Cancel
        </button>
        <button
          type="button"
          class="btn btn-success rounded-top-custom rounded-end-custom"
        >
          Add
        </button>
      </div>
    </div>
  </div>
</div>
